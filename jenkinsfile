pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        SONAR_SERVER = 'SonarQube-Local'  // Ensure this matches the name in Jenkins' SonarQube configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/arijit0405/simple-crud-app.git', branch: 'main'
            }
        }

        stage('Verify Branch') {
            when {
                expression { return env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main' }
            }
            steps {
                echo 'On main branch, proceeding with the pipeline...'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        bat "${MAVEN_HOME}/bin/mvn clean compile"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        bat "${MAVEN_HOME}/bin/mvn test"
                    }
                }
            }
            post {
                unstable {
                    echo 'Some tests failed.'
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression { return env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main' }
            }
            steps {
                withSonarQubeEnv('SonarQube-Local') {
                    // Use credentials binding for the Sonar token
                    withCredentials([string(credentialsId: 'SonarQubeToken', variable: 'SONAR_TOKEN')]) {
                        bat "${MAVEN_HOME}/bin/mvn sonar:sonar -Dsonar.projectKey=SimpleCrudApp -Dsonar.host.url=http://localhost:9000 -Dsonar.login=${SONAR_TOKEN}"
                    }
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        bat "${MAVEN_HOME}/bin/mvn package"
                    }
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }

        stage('Notify') {
            steps {
                mail to: 'arijitchakraborty691@gmail.com',
                     subject: "Build ${currentBuild.fullDisplayName} - ${currentBuild.result}",
                     body: "The build has ${currentBuild.result}. Check Jenkins for details: ${env.BUILD_URL}"
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for more details.'
        }
    }
}
