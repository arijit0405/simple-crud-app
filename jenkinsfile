pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        SONAR_SERVER = 'SonarQube-Local'  // Make sure this matches the name you set in Jenkins' SonarQube configuration
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from GitHub
                git url: 'https://github.com/arijit0405/simple-crud-app.git', branch: 'main'
            }
        }

        stage('Verify Branch') {
            when {
                expression {
                    // Proceed only if the branch is 'main'
                    return env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main'
                }
            }
            steps {
                echo 'On main branch, proceeding with the pipeline...'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        // Clean and compile the application
                        bat "${MAVEN_HOME}/bin/mvn clean compile"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        // Run unit tests
                        bat "${MAVEN_HOME}/bin/mvn test"
                    }
                }
            }
            post {
                unstable {
                    echo 'Some tests failed.'
                }
            }
        }

        stage('SonarQube Analysis') {
            when {
                expression {
                    return env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main'
                }
            }
            steps {
                withSonarQubeEnv(SONAR_SERVER) {
                    bat "${MAVEN_HOME}/bin/mvn sonar:sonar -Dsonar.projectKey=SimpleCrudApp -Dsonar.host.url=http://localhost:9090 -Dsonar.login=${SONARQUBE_TOKEN}"
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    if (env.GIT_BRANCH == 'origin/main' || env.BRANCH_NAME == 'main') {
                        // Package the application as a .jar file
                        bat "${MAVEN_HOME}/bin/mvn package"
                    }
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }

        stage('Notify') {
            steps {
                mail to: 'arijitchakraborty691@gmail.com',
                     subject: "Build ${currentBuild.fullDisplayName} - ${currentBuild.result}",
                     body: "The build has ${currentBuild.result}. Check Jenkins for details: ${env.BUILD_URL}"
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for more details.'
        }
    }
}
