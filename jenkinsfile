pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        SONAR_SERVER = 'SonarQube-Local'  // Ensure this matches the name in Jenkins' SonarQube configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/arijit0405/simple-crud-app.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Clean and compile the application
                    bat "${MAVEN_HOME}/bin/mvn clean compile"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run unit tests
                    bat "${MAVEN_HOME}/bin/mvn test"
                }
            }
            post {
                unstable {
                    echo 'Some tests failed.'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube-Local') {
                    bat "${MAVEN_HOME}/bin/mvn sonar:sonar -Dsonar.projectKey=SimpleCrudApp -Dsonar.host.url=http://localhost:9000 -Dsonar.login=${SonarQubeToken}"
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    // Package the application as a .jar file
                    bat "${MAVEN_HOME}/bin/mvn package"
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for more details.'
        }
    }
}
